[Unit]
Description=Randomize deck_startup.webm after boot

[Install]
WantedBy=default.target

[Service]
Type=oneshot
RemainAfterExit=true
WorkingDirectory=/home/deck/homebrew/startup_animations
# ExecStartPre=/bin/sleep 30
ExecStart=/home/deck/homebrew/startup_animations/randomize_deck_startup.sh
#ExecStop should run on logout to switch to game mode
ExecStop=/home/deck/homebrew/startup_animations/randomize_deck_startup.sh
StandardOutput=syslog
StandardError=syslog
SyslogIdentifier=bootWebmRandomizer
